#!/bin/bash
# Shell wrapper for ./bin/ark.py

set -e

if [ ! -f ./bin/ark.py ]; then
    echo "Error: ./bin/ark.py not found."
    exit 1
fi

INTERPRETER="./.venv/bin/python"

if [ ! -f "$INTERPRETER" ]; then
    echo "Error: $INTERPRETER not found."
    echo "Please run ./setup.sh first."
    echo ""
    echo "For custom interpreter defenition, Set the INTERPRETER variable"
    echo "in this script to the path of your Python interpreter."
    exit 1
fi

$INTERPRETER ./bin/ark.py "$@"
